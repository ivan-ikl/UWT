@model UWT.Web.Models.CategoryViewModel
<a href="@Url.Action("Index", "Home", new {ViewBag.ShopId, category = Model.Id})">
    <div style="width: 100%; height: 64px">
        <div style="width: 64px; float: left; margin-right: 16px;">
            <img class="categoryList-image" src="@Model.Image.Replace("~", "")" alt=""/>
        </div>
        <h3 style="font-size: 20px; padding: 20px">@Model.Title</h3>
    </div>
</a>