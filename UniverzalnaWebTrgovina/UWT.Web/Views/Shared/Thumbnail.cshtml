@using UWT.Web.Models
@model UWT.Web.Interfaces.IThumbnail
@{
    string url = null;
    if (Model.GetType() == typeof (ProductViewModel))
    {
        url = Url.Action("EditProduct", "Merchant", new {shop = ViewBag.ShopId, Model.Id});
    }
    else if (Model.GetType() == typeof(CategoryViewModel)) {
        url = Url.Action("EditCategory", "Merchant", new { shop = ViewBag.ShopId, Model.Id });
    }
}
<div class="galleryItem @(ViewBag.ThumbnailSm == true ? "galleryItem-sm" : null)">
    <a href="@url">
        <div style="width: 100%; height: @(ViewBag.ThumbnailSm == true ? "84px" : "175px")">
            <img src="@Model.Image.Replace("~", "")" class="img-thumbnail" alt="@Model.Title">
        </div>
    </a>
    <h3>@Model.Title</h3>
    <p>@Model.Description</p>
</div>