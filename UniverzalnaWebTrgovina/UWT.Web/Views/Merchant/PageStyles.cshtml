@model List<UWT.Web.Models.PageStyleViewModel>
@{
    ViewBag.Title = "PageStyles";
    ViewBag.MainTitle = "Stilovi trgovina";
    ViewBag.Subtitle = "Moji stilovi";
}
@section buttons{
    <a href="@Url.Action("CreatePageStyle")" class="btn btn-default">Izrada novog stila</a>
}

<table class="table table-hover table-condensed table-responsive">
    <thead>
        <tr>
            <td class="col-md-2">Naziv</td>
            <td class="col-md-2" colspan="2">Pozadina</td>
            <td class="col-md-1">Tekst</td>
            <td class="col-md-2" colspan="2">Izbornik</td>
            <td class="col-md-1">Listovi</td>
            <td class="col-md-1">Logotip</td>
            <td class="col-md-1">Podnožje</td>
            <td class="col-md-2"></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@item.Name</td>
                <td class="col-md-1"><span class="form-control" style="background-color: @item.BackgroundColor; font-size: large"></span></td>
                <td class="col-md-1"><img src="@item.BackgroundImage.Replace("~", "")" alt="Background" class="thumbnail table-image" /></td>
                <td><span class="form-control" style="background-color: @item.ForegroundColor; font-size: large"></span></td>
                <td class="col-md-1"><span class="form-control" style="background-color: @item.NavColor; font-size: large"></span></td>
                <td class="col-md-1"><img src="@item.NavImage.Replace("~", "")" alt="Background" class="thumbnail table-image" /></td>
                <td><span class="form-control" style="background-color: @item.SheetColor; font-size: large"></span></td>
                <td><img src="@item.Logo.Replace("~", "")" alt="Logo" class="thumbnail table-image" /></td>
                <td><img src="@item.FooterImage.Replace("~", "")" alt="Background" class="thumbnail table-image" /></td>
                <td><a href="@Url.Action("EditPageStyle", "Merchant", new { item.Id })" class="pull-right btn btn-sm btn-default">Uredi</a></td>
            </tr>
        }
    </tbody>
</table>

